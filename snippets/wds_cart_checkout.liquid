          from {
            bottom: -300px;
            opacity: 0
          }

          to {
            bottom: 0;
            opacity: 1
          }
        }

        @-webkit-keyframes fadeIn {
          from {
            opacity: 0
          }

          to {
            opacity: 1
          }
        }

        @keyframes fadeIn {
          from {
            opacity: 0
          }

          to {
            opacity: 1
          }
        }
      </style>
    {% endif %}
  {% endif %}
{% endif %}
