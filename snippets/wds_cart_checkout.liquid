                {{ shop.metafields.wds.translations.value.subtotal_text | default: 'Subtotal : ' -}}
              </span>
              <del>
                <span class="wds_compare_total_price_money"></span>
              </del>
              <span class="wds_discounted_total_price_money"></span>
              <span class="wds_compare_total_price_non_discount_money"></span>
            </div>
            <div class="wds-empty-div">
              <span></span>
            </div>
            <div class="wds-button-container">
          {% if shop.metafields.wds.saveCartTranslations.value.is_enable_save_cart == 1 %}
           <button type="button" id="wds_save_cart" onclick= "window.wds_save_cart(this)" class="btn button" name="wds_save_cart">
               {{ shop.metafields.wds.saveCartTranslations.value.btn_save_cart | default:"Save Cart" }}
          </button>

             <button type="button" id="wds_view_cart" onclick="window.wds_view_cart(this)" class="btn button" name="wds_view_cart">
                 {{ shop.metafields.wds.saveCartTranslations.value.btn_view_cart | default:"View Save Cart" }}
             </button>
            {% endif %}
            <button class="wds_wholesale_section_cart btn button">
              {{ shop.metafields.wds.translations.value.view_wholesale_section | default: 'View Wholesale Section' }}
            </button>
            <button class="wds_update_cart btn button">
              {{ shop.metafields.wds.translations.value.refresh_cart | default: 'Update Wholesale cart' }}
            </button>
            {% assign customer_tags = customer.tags | downcase %}

            {% if customer and customer_tags contains 'wds-net-terms' and shop.metafields.wds.net_terms.value.is_enabled == 1 and cart != empty %}
              <button class="wds_net_terms_btn wds_modal_net_terms_btn btn button">
                {{ shop.metafields.wds.net_terms.value.btn_label | default: 'Net Terms Checkout' }}
              </button>
            {% endif %}

